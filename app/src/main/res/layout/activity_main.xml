<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dpv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/father_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.felixpc.down.downloader.MainActivity">

    <MaterialEditText
        android:id="@+id/path_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:hint="输入链接"
        android:textColorHint="#FF00FF"
        app:floatingLabel="true"
        app:paddingStart="4dp"
        tools:ignore="MissingPrefix" />

    <com.panwrona.downloadprogressbar.library.DownloadProgressBar
        android:id="@+id/download_progressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        dpv:circleBackgroundColor="@android:color/holo_blue_bright"
        dpv:circleRadius="48dp"
        dpv:drawingColor="@android:color/holo_blue_bright"
        dpv:lineWidth="3dp"
        dpv:overshootValue="2.5"
        dpv:progressBackgroundColor="@android:color/holo_blue_bright"
        dpv:progressColor="@android:color/holo_blue_bright"
        dpv:progressDuration="2000"
        dpv:resultDuration="5000"
        dpv:strokeWidth="3dp" />

    <TextView
        android:id="@+id/hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="点击下载"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
</LinearLayout>
