<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/input_parent_lay"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/dialog_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="输入地址"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="gone" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/dialog_lay_bg"
        android:orientation="vertical">

        <MaterialEditText
            android:id="@+id/path_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="#D9FFFF"
            android:hint="@string/create_dialog_hint_text"
            android:textColorHint="#FF00FF"
            app:floatingLabel="true"
            app:paddingStart="4dp"
            tools:ignore="MissingPrefix" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/inputPathLay_ok"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_button_bg"
                android:gravity="center"
                android:text="确定"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/inputPathLay_cancle"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_button_canclebg"
                android:gravity="center"
                android:text="取消"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>